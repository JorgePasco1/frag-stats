{
	"hooks": {
		"SessionStart": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "cd \"$CLAUDE_PROJECT_DIR\" && mkdir -p docs/plans/ ~/.claude/plans/frag-stats/ && (cp ~/.claude/plans/frag-stats/*.md docs/plans/ 2>/dev/null || true)"
					}
				]
			}
		],
		"SessionEnd": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "cd \"$CLAUDE_PROJECT_DIR\" && mkdir -p ~/.claude/plans/frag-stats/ && (cp docs/plans/*.md ~/.claude/plans/frag-stats/ 2>/dev/null || true)"
					}
				]
			}
		]
	},
	"mcpServers": {
		"greptile": {
			"command": "npx",
			"args": [
				"-y",
				"@greptile/mcp-server"
			]
		}
	}
}
